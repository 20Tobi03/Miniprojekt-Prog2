from machine import Pin, ADC
import time
import os

# Pin-Zuordnung f√ºr ESP8266
gas_digital = Pin(5, Pin.IN)     # D1 entspricht GPIO5
gas_analog = ADC(0)              # A0

class Sensor:
    def __init__(self, digitalPinI):
        self.digitalPin=Pin(digitalPinI, Pin.IN)
    
    def messen(self):
        gassensor_digital=self.digitalPin.value()
        if gassensor_digital==0:
            self.alarm()

    def alarm(self):
        print("Gas!")

sensor11=Sensor(5)
while True:
    gassensor_analog = gas_analog.read()        # Wertebereich 0-1023
    gassensor_digital = gas_digital.value()     # 0 oder 1

    print("Gas Sensor:", gassensor_analog, "  Digital", gassensor_digital)

    if gas_digital:
        print("No Gas")
        time.sleep(1)
    else:
        print("Gas!")

    time.sleep(0.2)

